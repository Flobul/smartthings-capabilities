            "arguments": {}
        },
        "mute": {
            "label": "Mute",
            "description": "Mute playback",
            "arguments": {}
        },
        "setTrack": {
            "label": "setTrack",
            "description": "Set the current track",
            "arguments": {
                "trackToSet": {
                    "i18n": {},
