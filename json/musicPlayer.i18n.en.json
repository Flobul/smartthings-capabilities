                    "paused": {
                        "label": "Paused"
                    },
                    "stopped": {
                        "label": "Stopped"
                    },
                    "standby": {
                        "label": "Standby"
                    },
                    "stop": {
                        "label": "Stop"
                    },
                    "playing": {
                        "label": "Playing"
                    },
                    "pause": {
                        "label": "Pause"
                    }
                }
            }
