{
    "tag": "en",
    "label": "Colour control",
    "description": "Allows for control of a color changing device by setting its hue, saturation, and color values",
    "attributes": {
        "saturation": {
            "label": "saturation",
            "description": "``0-100`` (percent)",
            "displayTemplate": "{{device.label}} {{attribute}} was {{value}}",
            "i18n": []
        },
        "color": {
            "label": "color",
            "description": "``{\"hue\":\"0-100 (percent)\", \"saturation\":\"0-100 (percent)\"}``",
            "displayTemplate": "{{device.label}} {{attribute}} was {{value}}",
            "i18n": []
        },
        "hue": {
            "label": "hue",
            "description": "``0-100`` (percent)",
            "displayTemplate": "{{device.label}} {{attribute}} was {{value}}",
            "i18n": []
        }
    },
    "commands": {
        "setColor": {
            "description": "Sets the color based on the values passed in with the given map",
            "arguments": {
                "color": {
                    "i18n": {
                        "saturation": {
                            "label": "saturation"
                        },
                        "hue": {
                            "label": "hue"
                        }
                    },
                    "description": "The color map supports the following key\/value pairs:"
                }
            }
        },
        "setHue": {
            "description": "Set the hue value of the color",
            "arguments": {
                "hue": {
                    "i18n": [],
                    "description": "A number in the range ``0-100`` representing the hue as a value of percent"
                }
            }
        },
        "setSaturation": {
            "description": "Set the saturation value of the color",
            "arguments": {
                "saturation": {
                    "i18n": [],
                    "description": "A number in the range ``0-100`` representing the saturation as a value of percent"
                }
            }
        }
    }
}