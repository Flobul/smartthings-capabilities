{
    "tag": "en",
    "label": "Timed Session",
    "description": "Allows for the control of the timed session.",
    "attributes": {
        "completionTime": {
            "label": "completion time",
            "description": "The date time that the timed session will complete complete",
            "displayTemplate": "{{device.label}} {{attribute}} was {{value}}",
            "i18n": {}
        },
        "sessionStatus": {
            "label": "session status",
            "description": "Current status of the timed session",
            "displayTemplate": "{{device.label}} {{attribute}} was {{value}}",
            "i18n": {
                "value": {
                    "running": {
                        "label": "running"
                    },
                    "canceled": {
                        "label": "canceled"
                    },
                    "paused": {
                        "label": "paused"
                    },
                    "stopped": {
                        "label": "stopped"
                    }
                }
            }
        }
    },
    "commands": {
        "cancel": {
            "description": "Cancel the timed session",
            "arguments": {}
        },
        "stop": {
            "description": "Stop the timed session",
            "arguments": {}
        },
        "start": {
            "description": "Start the timed session",
            "arguments": {}
        },
        "setCompletionTime": {
            "description": "Set the completion time for the timed session",
            "arguments": {
                "completionTime": {
                    "i18n": {},
                    "description": "Set the completion time for the timed session to this IS0-8601 time"
                }
            }
        },
        "pause": {
            "description": "Pause the timed session",
            "arguments": {}
        }
    }
}